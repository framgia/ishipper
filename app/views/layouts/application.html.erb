    <script>
      var config = {
        apiKey: "AIzaSyDsWdtzaA6H69wu61G5dAutimbL48TKHTY",
        authDomain: "ishipperandroid.firebaseapp.com",
        databaseURL: "https://ishipperandroid.firebaseio.com",
        storageBucket: "ishipperandroid.appspot.com",
        messagingSenderId: "390344509677"
      };
