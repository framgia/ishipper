<div class="lvc-admin-content col-xs-10 col-sm-10 col-md-10 col-lg-10
  col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
  <h1 class="text-center">
    <%= t "manage_users.index.title" %>
  </h1>
  <hr>
  <div class="hs-search" status="show" data="<%= t("search_ransack.change_view").to_json %>">
    <%= t "search_ransack.change_view.hide" %>
  </div>
  <%= search_form_for [:admin, @search] do |f| %>
    <%= f.condition_fields do |c| %>
      <%= render "condition_fields", f: c %>
    <% end %>
    <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
    <div class="field">
      Sort:
      <%= f.sort_fields do |s| %>
        <%= s.sort_select %>
      <% end %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
  <% end %>
  <hr>

  <table class="td-table table">
    <tr>
      <th>
        <%= t "manage_users.index.user.name" %>
      </th>
      <th>
        <%= t "manage_users.index.user.email" %>
      </th>
      <th>
        <%= t "manage_users.index.user.phone_number" %>
      </th>
      <th>
        <%= t "manage_users.index.user.role" %>
      </th>
      <th>
        <%= t "manage_users.index.user.status" %>
      </th>
      <th>
      </th>
    </tr>
    <%= render "user" %>
  </table>
  <div class="clearfix"></div>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
  <div class="tab-space"></div>
</div>
