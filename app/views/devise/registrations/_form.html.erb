<div class="modal-dialog" data-backdrop="static" data-keyboard="false">
  <div class="modal-content">
    <div class="nht-sign_up-header">
      <div class="close">
        <%= link_to "#", data: {dismiss: "modal"} do %>
          <i><%= image_tag "cut.png" %></i>
        <% end %>
        <div class="clearfix"></div>
      </div>
      <h2 class="text-center"><%= t "devise.sign_up" %></h2>
    </div>
    <div class="row" id="sign-up-scroll">
      <div class="col-md-7 col-sm-7 col-xs-12 nht-col-left">
        <%= form_for @user, url: user_registration_path, remote: true do |f| %>
          <div id="nht-sign_up-errors"></div>

          <div class="input">
            <%= select_tag :country_code, options_for_select(
              Settings.country_code), class: "form-control nht-country-code" %>
            <%= f.label :phone_number %><br/>
            <div class="nht-input">
              <i class="fa fa-phone-square nht-sign_up-icon"></i>
              <%= text_field_tag :unphone_number, "",
                class: "form-control sign_up-input-phone" %>
              <%= f.hidden_field :phone_number, autofocus: true,
                class: "form-control sign_up-input-phone" %>
            </div>
          </div>

          <div class="input">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t "devise.character" %>)</em>
            <% end %><br/>
            <div class="nht-input">
              <i class="fa fa-key nht-sign_up-icon"></i>
              <%= f.password_field :password, autocomplete: "off",
                class: "form-control sign_up-input" %>
            </div>
          </div>

          <div class="input">
            <%= f.label :password_confirmation %><br />
            <div class="nht-input">
              <i class="fa fa-key nht-sign_up-icon"></i>
              <%= f.password_field :password_confirmation, autocomplete: "off",
                class: "form-control sign_up-input" %>
            </div>
          </div>

          <div class="input">
            <%= f.label :name %><br />
            <div class="nht-input">
              <i class="fa fa-info nht-sign_up-icon"></i>
              <%= f.text_field :name,
                class: "form-control sign_up-input" %>
            </div>
          </div>

          <div class="input">
            <%= f.label :address %><br />
            <div class="nht-input">
              <i class="fa fa-university nht-sign_up-icon"></i>
              <%= f.text_field :address, class: "form-control sign_up-input",
                id: "address" %>
            </div>
          </div>

          <%= f.hidden_field :role, value: Settings.role %>

          <div class="actions">
            <%= f.submit t("devise.sign_up"),
              class: "hvr-pulse-shrink btn btn-primary base-color nht-btn-sign_up" %>
          </div>
        <% end %>

      </div>
      <div class="col-md-5 col-sm-5 col-xs-12 nht-col-right">
        <div class="nht-shared">
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

