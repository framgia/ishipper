<% @users.each do |user| %>
  <tr class="td-table-data" id="user-<%= user.id %>"
    data-report="<%= user.passive_reviews.report_in_day.size %>">
    <td class="td-name-report">
      <%= link_to user.name, admin_user_path(user) %>
      (<%= user.passive_reviews.report_in_day.size %>)
    </td>
    <td><%= user.email %></td>
    <td><%= user.phone_number %></td>
    <td><strong><%= user.role %></strong></td>
    <td>
      <span class="td-manage-status" data-key="<%= User.statuses[user.status] %>">
        <%= user.status %>
      </span>
    </td>
    <td></td>
  </tr>
<% end %>
