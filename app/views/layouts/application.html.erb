<!DOCTYPE html>
<html>
  <head>
    <title><%= t :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
    <meta name="turbolinks-cache-control" content="no-cache">
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="nht-header">
        <%= render "layouts/sidebar" %>
      </div>
      <div class="w3-main td-nav-hide">
        <div class="nht-header">
          <%= render "layouts/header" %>
        </div>
        <i class="fa fa-bars w3-opennav w3-hide-large w3-xlarge w3-margin-left
          w3-margin-top td-menu-hide">
        </i>
        <%= render "layouts/body_form" %>
      </div>
    <% elsif admin_admin_signed_in?%>
      <div class="col-sm-3 col-lg-2">
        <%= render "layouts/admin_sidebar" %>
      </div>
      <div class="col-sm-9 col-lg-10 padding">
        <div class="row">
          <div id="flash">
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %> nht-flash"><%= message %></div>
            <% end %>
            <div class="clearfix"></div>
          </div>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= render "layouts/body_form" %>
    <% end %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAik8OVJ3_JisisBdw7aS20dQDt3lD1bG0&sensor=false&libraries=places&callback=initAutocomplete" data-turbolinks-eval="false" ></script>
  </body>
</html>
