<div class="modal-dialog hatd-edit-profile-dialog">
  <div class="modal-content hatd-edit-profile-content">
    <div class="hatd-edit-profile-header">
      <span class="hatd-edit-profile-title"><%= t "users.edit.title" %></span>
      <button type="button" class="close hatd-edit-profile-close-btn" data-dismiss="modal">&times;</button>
    </div>
    <%= form_for @shop, url: shop_path(id: current_user.id),
      authenticity_token: true, html: {class: "form-edit-profile", remote: true} do |f| %>
      <div id="hatd-update-profile-error"></div>
      <div class="modal-body">
        <div class="col-sx-12">
          <div class="col-md-3">
            <div class="hatd-edit-profile-avatar">
              <div class="upload-preview"></div>
              <%= image_tag avatar_profile(current_user.avatar.url), id: "avatar_upload" %>
            </div>
            <label class="hatd-btn hatd-btn-success fileinput-button">
              <span><%= t "users.edit.button" %></span>
              <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "file" %>
            </label>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <div class="hatd-edit-profile-label">
                <%= f.label :name %>:
              </div>
            </div>
            <div class="form-group">
              <div class="hatd-edit-profile-label">
                <%= f.label :address %>:
              </div>
            </div>
            <div class="form-group">
              <div class="hatd-edit-profile-label">
                <%= f.label :email %>:
              </div>
            </div>
          </div>
          <div class="col-md-7">
            <div class="form-group">
              <%= f.text_field :name, placeholder: t("users.name"), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :address, placeholder: t("users.address"), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, placeholder: t("users.email"), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :current_password, placeholder: t("users.current_password"),
                class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="modal-footer">
        <div class="hatd-footer-btn">
          <button class="hatd-btn btn-default" data-dismiss="modal">
            <i class="ace-icon fa fa-times"></i><%= t "close" %>
          </button>
          <%= button_tag class: "btn btn-primary text-center loading-after base-color" do %>
            <i class="ace-icon fa fa-check"><%= t "devise.update" %></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
