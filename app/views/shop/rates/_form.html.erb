<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2
  col-lg-8 col-lg-offset-2 nht-rate-form ">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= link_to "#", class: "close", id: "dis-rate-modal" do %>
        <i class="fa fa-times" aria-hidden="true"></i>
      <% end %>

      <%= form_for [:shop, @rate], as: :rate, url: shop_rates_path, remote: true do |f| %>
        <div id="nht-rate-errors">
          <div class="clearfix"></div>
        </div>
        <div class="nht-rate-content">
          <div class="nht-review-rate">
            <% Settings.rate.max_rate.times do |i| %>
              <i class="fa fa-star nht-star-<%= i %>"><% i %></i>
            <% end %>
            <div class="clearfix"></div>
          </div>
          <%= f.hidden_field :rating_point, value: @rate.rating_point %>
          <%= f.hidden_field :invoice_id %>
          <%= f.text_area :content, placeholder: t("rate.enter_content"),
            class: "form-control ckeditor", id: "ckeditor" %>
          <%= f.submit t("rate.create"), class: "btn btn-primary base-color nht-btn-rate" %>
        </div>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
